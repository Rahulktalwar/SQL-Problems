select * from customers;
select * from orders;

EXPECTED OUTPUT:
+---------------+
| CUSTOMER      |
+---------------+
| David Smith   |
| James Canny   |
+---------------+


Sol: 
WITH CTE AS (
SELECT C.ID AS ID, NAME, ORDER_DATE, YEAR(ORDER_DATE) AS YEAR, MONTH(ORDER_DATE) AS MONTH
FROM CUSTOMERS C
JOIN ORDERS O ON O.CUSTOMER_ID=C.ID
ORDER BY C.ID,ORDER_DATE
),

CTE1 AS (
SELECT ID, NAME, ORDER_DATE, YEAR, MONTH,
row_number() OVER (PARTITION BY ID,YEAR ORDER BY ID) AS RN
FROM CTE)

SELECT C23.NAME
FROM CTE1 C23 
JOIN CTE1 C24 ON C24.ID=C23.ID 
WHERE C23.ID NOT IN (SELECT ID FROM CTE1 WHERE YEAR=2025)
AND  C24.YEAR=2024 AND C24.RN=12 AND
C23.YEAR=2023 AND C23.RN=6 ;


